{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py", 
      "use": "@vercel/python", 
      "config": { "maxLambdaSize": "15mb" } 
    },
    {
      "src": "public/**", 
       "use": "@vercel/static" 
    }
  ],
  "routes": [
    {
       "src": "/static/(.*)", 
       "dest": "/public/static/$1"
     },
     {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))", 
      "dest": "/public/$1"
    },
    {
      "src": "/api/(.*)", 
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)", 
      "dest": "/public/index.html"
    }
  ]
}
